<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:clipToPadding="false"
    tools:context="com.sendinaden.app1.fragments.SessionReportFragment">

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/reportLineChart"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/session_report_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportLineChart"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Session #X - Duration: 0:34:56"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <include
        android:id="@+id/include2"
        layout="@layout/report_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <include
        layout="@layout/report_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="34dp" />
</RelativeLayout>
