<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/half_border_margin">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="left|center_vertical"
            android:text="Breath Count: 700 (20B P/M)" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_below="@id/textView7"
            android:gravity="left|center_vertical"
            android:text="Depth of Breath: 35/50" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_below="@id/textView8"
            android:gravity="left|center_vertical"
            android:text="Inhale / Exhale Balance: +5" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_below="@id/textView9"
            android:gravity="left|center_vertical"
            android:text="Nose: 200 inhalations, 150 exhalations" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_below="@id/textView10"
            android:gravity="left|center_vertical"
            android:text="Nose: 200 inhalations, 200 exhalations" />
    </RelativeLayout>

</android.support.v7.widget.CardView>