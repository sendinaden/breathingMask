<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sparkline_cardview"
    android:layout_width="fill_parent"
    android:layout_height="75dp"
    android:layout_margin="8dp">
    and correct layout according to Material Design
    and find correct orientation layout-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/sparkline_chart"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/sparkline_recent_value"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/sparkline_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Name" />

        <TextView
            android:id="@+id/sparkline_recent_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="12"
            android:textColor="@color/ColorGraphPrimaryDark"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
